
@{
    ViewData["Title"] = "Movie List";
    
}

@model List<Movie>

<div class="content">
    <table class="table table-bordered">
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Year</th>
            <th>Director Name</th>
            <th>Rating</th>
            <th>Edited?</th>
            <th>Lent To</th>
            <th>Notes</th>
        </tr>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.CategoryID</td>
            <td>@movie.Year</td>
            <td>@movie.DirectorName</td>
            <td>@movie.Rating</td>
            <td>@movie.Edited</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@movie.MovieId" class="link-primary">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@movie.MovieId" class="link-primary">Delete</a></td>
        </tr>
        }
    </table>
</div>
