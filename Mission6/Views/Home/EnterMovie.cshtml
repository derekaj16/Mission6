
@{
    ViewData["Title"] = "Enter a Movie";
}

@model Movie

<div class="form-container">
    <form action="calculateGrade()">
        
        <label for="category">Category</label>
        <input type="text" id="category" />

        <label for="title">Title</label>
        <input type="text" id="title" />

        <label for="year">Year</label>
        <input type="number" id="year" />

        <label for="director">Director</label>
        <input type="text" id="director" />

        <label for="rating">Rating</label>
        <select id="rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>

        <input type="checkbox" id="edited" />
        <label for="edited">Edited?</label>

        <label for="lent">Lent to</label>
        <input type="text" id="lent" />

        <label for="notes">Notes</label>
        <input type="text" id="notes" />

        <button type="button" id="calculate">Add Movie</button>
        <h3 class="text-center">Grade: <span id="grade">--</span></h3>
    </form>
</div>