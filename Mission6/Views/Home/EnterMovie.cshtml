
@{
    ViewData["Title"] = "Enter a Movie";
}


@model MovieModel

<div class="form-container">
    <form method="post">
        
        <label asp-for="Category">Category</label>
        <input type="text" id="category" asp-for="Category" />

        <label asp-for="Title" >Title</label>
        <input type="text" id="title" asp-for="Title" />

        <label asp-for="Year">Year</label>
        <input type="number" id="year" asp-for="Year" />

        <label asp-for="DirectorName">Director</label>
        <input type="text" id="director" asp-for="DirectorName" />

        <label asp-for="Rating">Rating</label>
        <select id="rating" asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>

        <input type="checkbox" id="edited" asp-for="Edited"/>
        <label asp-for="Edited">Edited?</label>

        <label asp-for="LentTo">Lent to</label>
        <input type="text" id="lent" asp-for="LentTo" />

        <label asp-for="Notes">Notes</label>
        <input type="text" id="notes" asp-for="Notes"/>

        <button type="submit" id="calculate">Add Movie</button>
    </form>
</div>