
@{
    ViewData["Title"] = "Add Movie";
}

@model Movie

    <div class="content">
        <div class="form-container">
            <form method="post">

                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="CategoryID">Category</label>
                    <select class="form-control" asp-for="CategoryID">
                        <option value="">Select an option</option>
                        @foreach (Category c in ViewBag.Categories)
                        {
                            <option value="@c.CategoryID">@c.CategoryName</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control" asp-for="Title" />
                </div>

                <div class="form-group">
                    <label asp-for="Year">Year</label>
                    <input type="number" class="form-control" asp-for="Year" />
                </div>

                <div class="form-group">
                    <label asp-for="DirectorName">Director</label>
                    <input type="text" class="form-control" asp-for="DirectorName" />
                </div>

                <div class="form-group">
                    <label asp-for="Rating">Rating</label><br />
                    <select class="form-control" asp-for="Rating">
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" asp-for="Edited" />
                        <label asp-for="Edited" class="form-check-label">Edited?</label>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="LentTo">Lent to</label>
                    <input type="text" class="form-control" asp-for="LentTo" />
                </div>

                <div class="form-group">
                    <label asp-for="Notes">Notes</label>
                    <input type="text" class="form-control" asp-for="Notes" />
                </div>

                <button type="submit" id="calculate">Add Movie</button>
            </form>
        </div>
    </div>